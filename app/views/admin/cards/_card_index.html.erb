  <%= image_tag card.background.url(:thumb), alt: card.title %>
  <div>
    <%= truncate(card.title, length: 40, omission: "â€¦") %>
    <br>
    <% unless card.first? %>
      <%= link_to "Move higher", move_higher_admin_card_path(card), method: :post %>
      <br>
