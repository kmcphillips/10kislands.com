<%= form_for([:admin, @card]) do |f| %>
  <%= error_messages(f) %>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, cols: 40 %>
  </div>

  <div>
    <%= f.label :link, "YouTube link" %>
    <%= f.text_field :link, size: 50 %>
  </div>

  <div>
    <%= f.label :background, "Background image" %>
    <%= f.file_field :background, onchange: "previewImage(this, 'image_preview');" %>
    <%= card_image_preview @card, id: "image_preview" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
